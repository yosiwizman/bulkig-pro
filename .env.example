# ================================
# BulkIG Configuration Template
# ================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# ================================
# Instagram & Facebook Configuration
# ================================

# Instagram Business Account User ID
# Get this from Facebook Graph API Explorer: https://developers.facebook.com/tools/explorer/
# Use: GET /{your-page-id}?fields=instagram_business_account
IG_USER_ID=your_instagram_business_id

# Facebook Page Access Token (Long-lived)
# Get this from Facebook Developers Console
# Required permissions: instagram_basic, pages_read_engagement, pages_show_list
FB_LONG_LIVED_PAGE_TOKEN=your_facebook_page_token
FB_TOKEN=your_facebook_page_token

# ================================
# AI & External APIs
# ================================

# OpenAI API Key for AI-powered caption generation
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# ================================
# Server Configuration
# ================================

# Main application port
IG_POSTER_PORT=4011
PORT=4011

# Static file server port (for media serving)
STATIC_PORT=5005
STATIC_SERVER_PORT=5006

# Public base URL for media access (when using tunnels)
# Example: https://your-tunnel-domain.trycloudflare.com
PUBLIC_BASE_URL=
PUBLIC_IMAGE_BASE=

# ================================
# File System Paths
# ================================

# Directory for uploaded media files
# Windows: C:\IG\inbox
# Linux/Mac: /var/lib/bulkig/inbox
INBOX_PATH=C:\IG-Pro\inbox

# Data directory for application data
DATA_PATH=C:\IG\data

# ================================
# Application Behavior
# ================================

# Mock mode - set to true for testing without actual Instagram posting
# true = Test mode (no real posts), false = Production mode
IG_MOCK=false
MOCK=false

# Enable debug logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ================================
# Security & Performance
# ================================

# Session secret for web dashboard (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ================================
# Development & Testing
# ================================

# Environment (development, staging, production)
NODE_ENV=development

# ================================
# Optional: Third-Party Services
# ================================

# Cloudflare Tunnel Token (for secure media delivery)
# CLOUDFLARE_TUNNEL_TOKEN=

# Webhook URL for notifications
# WEBHOOK_URL=

# Sentry DSN for error tracking
# SENTRY_DSN=

# ================================
# Optional: Email Configuration
# ================================

# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=noreply@bulkig.com
