{
  "name": "bulkig-pro",
  "version": "0.2.0",
  "description": "Professional Instagram automation platform with AI-powered caption generation and advanced scheduling",
  "keywords": ["instagram", "automation", "social-media", "scheduling", "ai", "content-management"],
  "homepage": "https://github.com/yosiwizman/bulkig",
  "repository": {
    "type": "git",
    "url": "https://github.com/yosiwizman/bulkig.git"
  },
  "bugs": {
    "url": "https://github.com/yosiwizman/bulkig/issues"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Yosi Wizman",
    "email": "yosi@bulkig.com"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "pnpm --filter @bulkig-pro/ig-poster start",
    "dev:pro": "turbo run dev",
    "start:pro": "turbo run start",
    "migrate": "tsx scripts/migrate-settings.ts",
    "check-ports": "tsx scripts/check-ports.ts",
    "electron:dev": "tsx apps/ig-poster/src/electron/main.ts",
    "electron:build": "pnpm build && electron-builder",
    "dist:win": "pnpm electron:build --win",
    "dist:mac": "pnpm electron:build --mac",
    "dist:all": "pnpm electron:build -mwl",
    "license:generate": "tsx scripts/generate-license.ts",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install",
    "smoke-test": "tsx scripts/smoke-test.ts --base http://localhost:4010",
    "smoke-quick": "tsx scripts/smoke-test.ts --quick --base http://localhost:4010",
    "release:patch": "npm version patch && git push --tags",
    "release:minor": "npm version minor && git push --tags",
    "release:major": "npm version major && git push --tags",
    "prepare": "husky install || true",
    "precommit": "lint-staged",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:check": "pnpm audit --fix"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "main": "apps/ig-poster/dist/electron/main.js",
  "devDependencies": {
    "turbo": "^1.10.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.11.0",
    "prettier": "^3.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "pnpm": {
    "overrides": {
      "minimatch": "^9.0.5"
    }
  }
}
